---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getServicePageStructuredData } from "../../lib/structuredData";

const title = "Security Inspections for Web Applications | Sayyidi Shaarani";
const description =
  "Security inspections for web applications. For SMEs, startups, and NGOs seeking structured risk visibility. Defined scope, controlled assessment, clear reporting.";

const EMAIL = "hello@sayyidishaarani.com";

// Subject tuned for consultative, structured tone
const primaryCtaSubject = "Web Application Inspection — Scope Inquiry";

// Body template (structured, better qualification)
const mailBody = `Hello Sayyidi,

I would like to discuss an inspection scope.

- Target URL (or environment):
- Short description of the application:
- Preferred testing window:
- Contact authorized to approve scope:

Regards,
`;

const mailtoHref = `mailto:${EMAIL}?subject=${encodeURIComponent(
  primaryCtaSubject
)}&body=${encodeURIComponent(mailBody)}`;

const structuredData = getServicePageStructuredData({
  path: "/inspection/",
  title,
  description,
});
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath="/inspection/"
  structuredData={structuredData}
>
  <!-- HERO -->
  <section id="hero" class="hero">
    <h1>Security Inspections for Web Applications</h1>
    <p class="kicker">by Sayyidi Shaarani</p>
    <p class="lede">For SMEs, startups, and NGOs seeking structured risk visibility.</p>

    <nav class="ctaRow" aria-label="Primary inspection actions">
      <a class="cta ctaPrimary" href={mailtoHref}>Discuss Inspection Scope</a>
      <a class="cta ctaSecondary" href="#model">View Inspection Model</a>
    </nav>

    <p class="muted meta">
      Typical duration: 1–2 weeks. Authorization required. Initial response is
      typically within one business day.
    </p>
  </section>

  <!-- MODEL -->
  <section id="model">
    <h2>Structured Inspection Model</h2>

    <div class="grid two">
      <div class="card">
        <h3>Scope &amp; Authorization</h3>
        <p class="muted">Boundaries and authorization defined before testing begins.</p>
      </div>

      <div class="card">
        <h3>External Exposure Review</h3>
        <p class="muted">Assessment of publicly reachable exposure and configuration posture.</p>
      </div>

      <div class="card">
        <h3>Structured Application Testing</h3>
        <p class="muted">
          Evaluation of authentication, access control, input handling, and business logic within scope.
        </p>
      </div>

      <div class="card">
        <h3>Risk Report &amp; Advisory</h3>
        <p class="muted">Categorized findings with remediation guidance.</p>
      </div>
    </div>
  </section>

  <!-- WHO -->
  <section id="who">
    <h2>Who This Is For</h2>
    <p class="muted">
      Typical engagement profiles include customer-facing platforms where
      application changes can outpace formal risk visibility.
    </p>
    <ul>
      <li>SMEs operating customer-facing applications</li>
      <li>Startups iterating rapidly</li>
      <li>NGOs handling sensitive data</li>
      <li>Teams preparing for growth with limited internal security capacity</li>
    </ul>
  </section>

  <!-- DEFINITION -->
  <section id="definition">
    <h2>What This Is and Is Not</h2>

    <div class="grid two">
      <div class="card">
        <h3>What This Is</h3>
        <ul>
          <li>Defined scope</li>
          <li>Controlled assessment</li>
          <li>Clear documentation</li>
          <li>Practical guidance</li>
        </ul>
      </div>

      <div class="card">
        <h3>What This Is Not</h3>
        <ul>
          <li>No simulated breach demonstrations</li>
          <li>No unreviewed automated reports</li>
          <li>Not a regulatory audit</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- REPORT -->
  <section id="report">
    <h2>Report Includes</h2>
    <div class="callout">
      <ul>
        <li>Executive summary</li>
        <li>Risk table</li>
        <li>Structured findings</li>
        <li>Remediation guidance</li>
      </ul>
    </div>
  </section>

  <!-- CONTACT FLOW -->
  <section id="contact-flow">
    <h2>After You Email</h2>
    <ol>
      <li>Scope-fit response, typically within one business day</li>
      <li>Short scoping call to define targets, boundaries, and timing</li>
      <li>Written scope and authorization before any testing activity</li>
    </ol>
  </section>

  <!-- ENGAGEMENT -->
  <section id="engagement">
    <h2>Engagement</h2>
    <ol>
      <li>Intro call</li>
      <li>Written scope</li>
      <li>Inspection window</li>
      <li>Report delivery</li>
      <li>Advisory review</li>
    </ol>
    <p class="muted">Typical duration: 1–2 weeks, depending on scope.</p>

    <nav class="ctaRow" aria-label="Engagement actions">
      <a class="cta ctaPrimary" href={mailtoHref}>Discuss Inspection Scope</a>
      <a class="cta ctaSecondary" href="/boundaries/">Professional boundaries</a>
    </nav>
  </section>

  <!-- BOUNDARIES -->
  <section id="boundaries">
    <h2>Professional Boundaries</h2>
    <p>Testing proceeds only with documented authorization and written scope.</p>
    <p>No activity is performed outside agreed boundaries or approved windows.</p>
    <ul class="trustList">
      <li>Evidence is collected only for reporting and remediation guidance</li>
      <li>Findings remain traceable to validated observations</li>
      <li>Confidentiality is maintained throughout the engagement</li>
    </ul>
    <p class="muted">
      Full reference: <a href="/boundaries/">Engagement Boundaries</a>
    </p>
  </section>

  <!-- CONTACT -->
  <section id="contact">
    <h2>Discuss Inspection Scope</h2>

    <p>Email: <a href={mailtoHref}>{EMAIL}</a></p>

    <div class="callout">
      <p><strong>Include:</strong></p>
      <ul>
        <li>Target URL (or environment)</li>
        <li>Short application description</li>
        <li>Preferred testing window</li>
        <li>Point of contact who can authorize scope</li>
      </ul>
    </div>

    <nav class="ctaRow" aria-label="Contact actions">
      <a class="cta ctaPrimary" href={mailtoHref}>Discuss Inspection Scope</a>
      <a class="cta ctaSecondary" href="#model">View Inspection Model</a>
    </nav>
  </section>
</BaseLayout>

<style>
  section {
    margin: var(--space-5) 0;
  }

  .hero {
    margin-top: var(--space-3);
  }

  .kicker {
    margin-bottom: 0.5rem;
    color: var(--muted);
    font-size: 0.88rem;
  }

  .lede {
    font-size: 1.08rem;
    line-height: 1.55;
    max-width: 62ch;
  }

  .meta {
    margin-top: 0.75rem;
    font-size: 0.9rem;
  }

  .grid.two {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: var(--space-2);
    background: var(--bg-soft);
  }

  .card h3 {
    margin-bottom: 0.45rem;
    font-size: 1.05rem;
  }

  .callout {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: var(--space-2);
    background: var(--bg-soft);
  }

  ul,
  ol {
    padding-left: 1.2rem;
  }

  li + li {
    margin-top: 0.35rem;
  }

  @media (max-width: 640px) {
    section {
      margin: var(--space-4) 0;
    }

    .hero {
      margin-top: var(--space-2);
    }
  }
</style>
