---
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
  CONTACT_EMAIL,
  inspectionScopeMailtoHref,
} from "../../lib/contact";
import { getServicePageStructuredData } from "../../lib/structuredData";

const title = "Security Inspections for Web Applications | Sayyidi Shaarani";
const description =
  "Security inspections for web applications. For SMEs, startups, and NGOs that need a clear view of risk. Clear scope, careful testing, and plain-language reporting.";

const mailtoHref = inspectionScopeMailtoHref;

const structuredData = getServicePageStructuredData({
  path: "/inspection/",
  title,
  description,
});
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath="/inspection/"
  structuredData={structuredData}
>
  <!-- HERO -->
  <section id="hero" class="hero">
    <h1>Security Inspections for Web Applications</h1>
    <p class="lede">For SMEs, startups, and NGOs that need a clear view of web application security risk.</p>

    <nav class="ctaRow" aria-label="Primary inspection actions">
      <a class="cta ctaPrimary" href={mailtoHref}>Request Inspection Scope Review</a>
      <a class="cta ctaSecondary" href="#model">How Inspection Works</a>
    </nav>

    <p class="muted meta">
      Typical duration: 1â€“2 weeks, depending on scope.
    </p>
  </section>

  <!-- MODEL -->
  <section id="model">
    <h2>How the Inspection Works</h2>
    <p class="muted">A clear step-by-step process so teams know what will happen and why.</p>

    <div class="grid two">
      <div class="card">
        <h3>Agree Scope and Permission</h3>
        <p class="muted">We define what will be reviewed and confirm written authorization before testing starts.</p>
      </div>

      <div class="card">
        <h3>Check What Is Publicly Exposed</h3>
        <p class="muted">We review what is reachable from the public internet and flag obvious risks.</p>
      </div>

      <div class="card">
        <h3>Test Core Security Areas</h3>
        <p class="muted">
          We test key areas such as login, account access, user input, and important user actions within scope.
        </p>
      </div>

      <div class="card">
        <h3>Deliver a Clear Action Report</h3>
        <p class="muted">You receive prioritized findings with practical steps your team can act on.</p>
      </div>
    </div>
  </section>

  <!-- WHO -->
  <section id="who">
    <h2>Who This Is For</h2>
    <p class="muted">
      Designed for organizations that run web applications and need clear security guidance
      without heavy technical language.
    </p>
    <ul>
      <li>SMEs running customer websites and web apps</li>
      <li>Startups iterating rapidly</li>
      <li>NGOs handling sensitive data</li>
      <li>Teams growing quickly with limited internal security support</li>
    </ul>
  </section>

  <!-- DEFINITION -->
  <section id="definition">
    <h2>What This Is and Is Not</h2>

    <div class="grid two">
      <div class="card">
        <h3>What This Is</h3>
        <ul>
          <li>Clear scope before testing starts</li>
          <li>Focused testing within agreed boundaries</li>
          <li>Clear written documentation</li>
          <li>Practical guidance for your team</li>
        </ul>
      </div>

      <div class="card">
        <h3>What This Is Not</h3>
        <ul>
          <li>No staged attack demo exercises</li>
          <li>No raw automated scan output without review</li>
          <li>Not a formal compliance audit</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- REPORT -->
  <section id="report">
    <h2>Report Includes</h2>
    <div class="callout">
      <ul>
        <li>Simple summary in plain language</li>
        <li>Prioritized risk list</li>
        <li>Findings with supporting evidence</li>
        <li>Practical fix recommendations</li>
      </ul>
    </div>
  </section>

  <!-- CONTACT FLOW -->
  <section id="contact-flow">
    <h2>After You Email</h2>
    <ol>
      <li>Initial reply, typically within one business day</li>
      <li>Short call to confirm what to test and when</li>
      <li>Written scope and authorization before any testing activity</li>
    </ol>
  </section>

  <!-- CONTACT -->
  <section id="contact">
    <h2>Request an Inspection Scope Review</h2>
    <p>Security inspections begin with written authorization and a defined scope discussion.</p>
    <p>No testing, scanning, or validation activity is conducted before scope and permission are confirmed.</p>

    <nav class="ctaRow" aria-label="Contact actions">
      <a class="cta ctaPrimary" href={mailtoHref}>Request Inspection Scope Review</a>
      <a class="cta ctaSecondary" href="#model">How Inspection Works</a>
    </nav>

    <aside class="contactGovernance muted" aria-label="Engagement governance">
      <p>
        See the <a href="/disclosure/">Security Disclosure Policy</a> for governance terms.
      </p>
      <p>
        For preliminary inquiries, you may also email
        <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a> directly.
      </p>
    </aside>
  </section>
</BaseLayout>

<style>
  .meta {
    margin-top: 0.75rem;
    font-size: 0.9rem;
  }

  .grid.two {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: var(--space-2);
    background: var(--bg-soft);
  }

  .card h3 {
    margin-bottom: 0.45rem;
    font-size: 1.05rem;
  }

  @media (min-width: 780px) {
    .grid.two {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: var(--space-3);
    }
  }

  .callout {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: var(--space-2);
    background: var(--bg-soft);
  }

  ul,
  ol {
    padding-left: 1.2rem;
  }

  li + li {
    margin-top: 0.35rem;
  }

  .contactGovernance {
    margin-top: calc(var(--space-2) + 0.3rem);
    max-width: 62ch;
    font-size: 0.9rem;
    line-height: 1.66;
  }

  .contactGovernance p {
    margin-bottom: 0.65rem;
  }

  .contactGovernance p:last-child {
    margin-bottom: 0;
  }

</style>
