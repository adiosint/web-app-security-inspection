---
import BaseLayout from "../layouts/BaseLayout.astro";
import { inspectionScopeMailtoHref } from "../lib/contact";
import { getServicePageStructuredData } from "../lib/structuredData";

const title = "Sayyidi Shaarani";
const description =
  "Independent web application security inspector. Security inspections and applied research.";

const structuredData = getServicePageStructuredData({
  path: "/",
  title,
  description,
});
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath="/"
  structuredData={structuredData}
>
  <section aria-labelledby="home-title" class="hero">
    <h1 id="home-title">Web Application Security Inspection</h1>
    <p class="lede">
      For SMEs, startups, and NGOs that need a clear view of security risk in their web applications.
    </p>
    <p>
      I provide structured inspections with clear scope, careful testing, and
      plain-language reporting focused on practical fixes.
    </p>

    <ul class="points" aria-label="Inspection approach">
      <li>Written scope and authorization before testing</li>
      <li>Findings documented with clear supporting evidence</li>
      <li>Practical guidance that fits your team and timeline</li>
    </ul>

    <nav class="ctaRow" aria-label="Primary actions">
      <a class="cta ctaPrimary" href={inspectionScopeMailtoHref}
        >Request Inspection Scope Review</a
      >
      <a class="cta ctaSecondary" href="/inspection/">How Inspection Works</a>
    </nav>

    <p class="muted meta">Typical duration: 1â€“2 weeks, depending on scope.</p>
  </section>
</BaseLayout>

<style>
  .points {
    margin: var(--space-3) 0;
    padding-left: 1.15rem;
  }

  .points li + li {
    margin-top: 0.45rem;
  }

  .meta {
    margin-top: var(--space-2);
    font-size: 0.9rem;
  }
</style>
