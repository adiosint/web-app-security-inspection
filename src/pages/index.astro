---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Sayyidi Shaarani";
const description =
  "Independent web application security inspector. Security inspections and applied research.";

const EMAIL = "hello@sayyidishaarani.com";
const primaryCtaSubject = "Inspection Scope Request";

const shortBody = `Target URL / environment:
App type (1â€“2 lines):
Preferred window:
Authorized contact:`;

const mailtoHref =
  `mailto:${EMAIL}?subject=${encodeURIComponent(primaryCtaSubject)}&body=${encodeURIComponent(shortBody)}`;
---

<BaseLayout title={title} description={description} canonicalPath="/">
  <section class="homeHero">
    <div class="stack tight">
      <h1>Web Application Security Inspector</h1>
      <p class="muted lede">Independent inspections for SMEs, startups, and NGOs.</p>

      <p class="lede">
        I conduct structured web application inspections designed to provide clear, evidence-based visibility into security risk.
        Engagements are defined in scope, proportionate in validation, and focused on actionable remediation guidance.
      </p>

      <div class="ctaRow">
        <a class="cta ctaPrimary" href={mailtoHref}>Discuss Inspection Scope</a>
        <a class="cta" href="/inspection/">View Inspection Model</a>
      </div>
    </div>
  </section>

  <hr />

  <!-- About anchor -->
  <section id="about" class="homeBody">
    <div class="stack">
      <p>
        My professional background includes enterprise cybersecurity operations, with focus on vulnerability management,
        web application security testing, and governance-aligned risk validation.
      </p>

      <p class="muted">
        The same disciplined approach is applied to smaller organizations that require structured risk visibility without
        enterprise-scale overhead.
      </p>
    </div>
  </section>

  <section class="homeLinks">
    <div class="stack">
      <div class="cluster">
        <a class="cta" href="/notes/">Read Notes</a>
        <a class="cta" href="/inspection/#model">Inspection model (summary)</a>
      </div>
    </div>
  </section>
</BaseLayout>